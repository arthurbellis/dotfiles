{{- $email := promptStringOnce . "email" "What is your email address" -}}
{{- $name := promptStringOnce . "name" "What is your name" -}}

[data]
    email = {{ $email | quote }}
    name = {{ $name | quote }}

[diff]
    command = "nvim"
    args = ["-d"]

[merge]
    command = "nvim"
    args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}"]
