// Separate by section, and alphabetize within each section
{
  // CORE SETTINGS
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.sqlx": "sql-bigquery"
  },

  "editor.renderWhitespace": "all",
  "editor.minimap.renderCharacters": false,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  "git.autofetch": true,
  "git.confirmSync": false,
  "git.detectSubmodulesLimit": 50,
  "gitlens.plusFeatures.enabled": false,

  "terminal.external.osxExec": "iTerm.app",

  "window.autoDetectColorScheme": true,

  // EXTENSION SETTINGS
  "sqlfluff.dialect": "bigquery",
  "sqlfluff.format.languages": ["sqlx", "sql", "sql-bigquery"],
  "sqlfluff.linter.run": "onType",
  "sqlfluff.linter.languages": ["sqlx", "sql", "sql-bigquery"],

  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  "c4.diagram.structurizr.enabled": true,
  "c4.diagram.renderer": "structurizr",

  // FILE FORMAT SETTINGS
  "[python]": {
    "editor.formatOnType": true
  },
  "[sqlx]": {
    "editor.quickSuggestions": {
      "other": "off",
      "comments": "off",
      "strings": "off"
    }
  },
  "[plaintext]": {
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.unicodeHighlight.invisibleCharacters": false
  },
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ],
  "redhat.telemetry.enabled": true,
  "terminal.integrated.inheritEnv": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "git.replaceTagsWhenPull": true
}
